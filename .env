# MemoChat Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Room Configuration
MAX_USERS_PER_ROOM=10
MAX_ROOM_MESSAGE_HISTORY=100
ROOM_CLEANUP_INTERVAL_MS=300000

# WebRTC Configuration (Optional STUN/TURN servers)
STUN_SERVER_URL=stun:stun.l.google.com:19302
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your-username
# TURN_PASSWORD=your-password

# Security
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/memochat.log

# Database (Optional - for persistent storage)
# DATABASE_URL=mongodb://localhost:27017/memochat
# REDIS_URL=redis://localhost:6379

# Production Settings
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem